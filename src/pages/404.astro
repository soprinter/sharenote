---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="Page not found">
  <section class="flex flex-1 items-center justify-center px-6 py-16 sm:py-24">
    <div class="w-full max-w-xl text-center space-y-2">
      <p class="text-[clamp(6rem,18vw,12rem)] font-black leading-none tracking-tight text-[var(--ink)]">404</p>
      <h1 class="text-2xl font-semibold tracking-tight text-[var(--ink)] sm:text-3xl">Page not found</h1>
      <p class="text-base text-[color:var(--ink-muted)] opacity-90 sm:text-lg">
        The page you are looking for doesnâ€™t exist or was moved.
      </p>
      <a
        href="/"
        class="inline-flex items-center justify-center rounded-full border border-[var(--ink)] px-8 py-3 text-sm font-semibold uppercase tracking-[0.18em] text-[var(--ink)] transition hover:bg-[var(--hover-bg)] hover:no-underline"
      >
        Go home
      </a>
    </div>
  </section>
</BaseLayout>
