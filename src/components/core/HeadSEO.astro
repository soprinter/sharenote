---
import "@/styles/globals.css";
// Supports weights 100-800
import "@fontsource-variable/jetbrains-mono";
// Supports weights 100-900
import "@fontsource-variable/montserrat";

import { ViewTransitions } from "astro:transitions";

import { ANALYTICS, GA_ID_PLACEHOLDER, LOCALE, SITE } from "@/config";
import type { HeadSEOProps } from "@/lib/types";

const canonicalURL = new URL(Astro.url);

const { title, description, ogImage } = Astro.props as HeadSEOProps;
const metaTitle = title ?? SITE.title;
const metaDescription = description ?? SITE.desc;
const measurementId = ANALYTICS.googleAnalyticsId;
const enableAnalytics =
  typeof measurementId === "string" &&
  measurementId.startsWith("G-") &&
  measurementId !== GA_ID_PLACEHOLDER;
const resolvedOgImage = (ogImage ?? new URL(SITE.ogImage, canonicalURL)).toString();
const siteName = SITE.title;
const ogLocale = Array.isArray(LOCALE.langTag) && LOCALE.langTag.length > 0 ? LOCALE.langTag[0] : undefined;

const organizationJSONLD = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: siteName,
  url: SITE.website,
  logo: new URL('/logo.png', canonicalURL).toString(),
  sameAs: SITE.repo ? [SITE.repo] : undefined,
};

const websiteJSONLD = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: siteName,
  url: SITE.website,
};
---

<meta charset="utf-8" />

<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
<link rel="shortcut icon" href="/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="manifest" href="/site.webmanifest" />

<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<link rel="canonical" href={canonicalURL} />
<link rel="shortcut icon" type="image/svg+xml" href="/favicon.svg" />
<title>{metaTitle}</title>
<meta name="title" content={metaTitle} />
{metaDescription && <meta name="description" content={metaDescription} />}

<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={metaTitle} />
<meta property="og:site_name" content={siteName} />
{ogLocale && <meta property="og:locale" content={ogLocale} />}
{metaDescription && <meta property="og:description" content={metaDescription} />}
<meta property="og:image" content={resolvedOgImage} />

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={metaTitle} />
{metaDescription && (
  <meta property="twitter:description" content={metaDescription} />
)}
<meta property="twitter:image" content={resolvedOgImage} />

{metaTitle && (
  <script type="application/ld+json" is:inline>
    {JSON.stringify(organizationJSONLD)}
  </script>
)}
{metaTitle && (
  <script type="application/ld+json" is:inline>
    {JSON.stringify(websiteJSONLD)}
  </script>
)}

{enableAnalytics && (
  <>
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${measurementId}`}></script>
    <script is:inline>
      {`window.dataLayer = window.dataLayer || [];
function gtag(){dataLayer.push(arguments);}
gtag('js', new Date());
gtag('config', '${measurementId}', { anonymize_ip: true });`}
    </script>
  </>
)}

<ViewTransitions />
